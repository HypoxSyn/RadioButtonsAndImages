<Window x:Class="RadioButtonsAndImages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadioButtonsAndImages"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
      <Label FontWeight="Bold" FontSize="20">Do you like me?</Label>
        <RadioButton Margin="5" Checked="YesChecked">
            <WrapPanel>
                 <Rectangle Fill="Green" Width="16" Height="16"></Rectangle>
                 <TextBlock Margin="5,0,0,0" Text="Yes" Foreground="Green"/>
            </WrapPanel>
        </RadioButton>

        <RadioButton Margin="5" Checked="NoChecked">
            <WrapPanel>
                <Rectangle Fill="Red" Width="16" Height="16"></Rectangle>
                <TextBlock Margin="5,0,0,0" Text="No" Foreground="Red"/>
            </WrapPanel>
        </RadioButton>

        <RadioButton Name="rbMaybe" Checked="MaybeChecked" Margin="5">
            <WrapPanel>
                <Rectangle Fill="Purple" Width="16" Height="16"></Rectangle>
                <TextBlock Margin="5,0,0,0" Text="Maybe" Foreground="Purple"/>
            </WrapPanel>
        </RadioButton>
    </StackPanel>
        
        
</Window>
